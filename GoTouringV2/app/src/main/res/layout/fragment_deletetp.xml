<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    tools:context=".DeleteTPFragment"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="24dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="DELETE TRAVEL PACKAGE "
        android:id="@+id/textDelete1"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/editTextdelTP2"
        android:hint="insert travel package id"
        android:inputType="number"
        android:ems="10"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/editTextdelTA2"
        android:hint="insert agency id"
        android:inputType="number"
        android:ems="10"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/editTextdelTI2"
        android:hint="insert trip info id"
        android:inputType="number"
        android:ems="10"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="DELETE"
        android:id="@+id/deluser2"
        android:layout_marginTop="40dp"/>

</LinearLayout>