<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
tools:context=".UpdateTPFragment"
android:orientation="vertical"
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="24dp"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_gravity="center_horizontal"
    android:text="UPDATE TRAVEL PACKAGE"
    android:id="@+id/textView"/>

<EditText
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/upeditTextTP1"
    android:hint="insert Id"
    android:inputType="number"
    android:ems="10"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/upeditTextTP3"
        android:hint="Insert Agency Id"
        android:inputType="number"
        android:ems="10"/>

<EditText
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/upeditTextTP2"
    android:inputType="number"
    android:hint="Insert Trip Id"
    android:ems="10"/>


<EditText
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/upeditTextTP4"
    android:hint="Insert Departure Date"
    android:inputType="datetime"
    android:ems="10"/>
<EditText
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/upeditTextTP5"
    android:hint="Insert Package Price"
    android:inputType="numberDecimal"
    android:ems="10"/>

<Button
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="UPDATE"
    android:id="@+id/updateuser2"
    android:layout_marginTop="40dp"/>

</LinearLayout>