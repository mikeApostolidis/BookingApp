<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateTPFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dp"
        android:text="UPDATE TRAVEL PACKAGE"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/upeditTextTP1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="insert Id"
        android:inputType="number" />

    <EditText
        android:id="@+id/upeditTextTP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert Agency Id"
        android:inputType="number" />

    <EditText
        android:id="@+id/upeditTextTP3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert Trip Id"
        android:inputType="number" />


    <EditText
        android:id="@+id/upeditTextTP4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert Departure Date"
        android:inputType="datetime" />

    <EditText
        android:id="@+id/upeditTextTP5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert Package Price"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/updateuser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:baselineAligned="false"
        android:text="UPDATE" />

</LinearLayout>