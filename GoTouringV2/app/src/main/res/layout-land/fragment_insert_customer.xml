<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InsertCustomerFragment">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Insert customer">

    </TextView>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/Customer_name"
        android:hint="name"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:ems="10" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/Customer_surname"
        android:hint="surname"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="15dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/Customer_age"
        android:hint="age"
        android:inputType="number"
        android:ems="10"
        android:textSize="15dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/hotel"
        android:hint="hotel"
        android:inputType="text"
        android:ems="10"
        android:textSize="15dp"
        />
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/travel_package"
        android:hint="Travel package id"
        android:inputType="number"
        android:ems="10"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/submitCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#009688"
        android:text="Submit" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Go back"
        android:id="@+id/Back_to_manager" />

</LinearLayout>