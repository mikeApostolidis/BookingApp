<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    tools:context=".UpdateTIFragment"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="UPDATE TRIP INFO"
        android:id="@+id/textView"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/upeditTextTI1"
        android:hint="Insert Id"
        android:inputType="number"
        android:ems="10"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/upeditTextTI2"
        android:hint="Insert Trip Info City"
        android:ems="10"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/upeditTextTI3"
        android:hint="Insert Travel Agency Country"
        android:inputType="textPersonName"
        android:ems="10"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/upeditTextTI4"
        android:hint="Insert Travel Agency Trip Duration"
        android:inputType="date"
        android:ems="10"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/upeditTextTI5"
        android:hint="Insert Travel Agency Trip Type"
        android:inputType="textPersonName"
        android:ems="10"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="UPDATE"
        android:id="@+id/updateuser1"
        android:layout_marginTop="0dp"/>

</LinearLayout>