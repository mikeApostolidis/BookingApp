<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateCustomerFragment">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Update customer">

    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Insert old values">

    </TextView>

    <EditText
        android:id="@+id/old_Customer_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:hint="old name"
        android:inputType="textPersonName"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/old_Customer_surname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:hint="old surname"
        android:inputType="textPersonName"
        android:textSize="15dp" />

    <EditText
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:id="@+id/old_travel_package"
        android:hint="Travel package id"
        android:inputType="number"
        android:ems="10"
        android:textSize="15dp"
        />

    <TextView
        android:layout_height="15dp"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Insert new values">

    </TextView>

    <EditText
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:id="@+id/Customer_name"
        android:hint="new name"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="15dp"/>

    <EditText
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:id="@+id/Customer_surname"
        android:hint="new surname"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="15dp"/>

    <EditText
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:id="@+id/Customer_age"
        android:hint="new age"
        android:inputType="number"
        android:ems="10"
        android:textSize="15dp"/>

    <EditText
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:id="@+id/hotel"
        android:hint="new hotel"
        android:inputType="text"
        android:ems="10"
        android:textSize="15dp"
        />
    <EditText
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:id="@+id/travel_package"
        android:hint="new Travel package id"
        android:inputType="number"
        android:ems="10"
        android:textSize="15dp"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Apply changes"
        android:backgroundTint="@android:color/holo_red_light"
        android:id="@+id/updateCustomer" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Go back"
        android:id="@+id/Back_to_manager" />
</LinearLayout>