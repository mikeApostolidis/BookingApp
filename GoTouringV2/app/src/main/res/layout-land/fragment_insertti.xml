<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        tools:context=".InsertTIFragment"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dp"
        android:text="INSERT TRAVEL INFO"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextINSTI1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="insert id"
        android:inputType="number" />

    <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/editTextINSTI2"
            android:hint="insert Travel Agency City"
            android:inputType="textPersonName"
            android:ems="10"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/editTextINSTI3"
            android:hint="Insert Travel Agency Country"
            android:inputType="textPersonName"
            android:ems="10"/>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/editTextINSTI4"
            android:hint="Insert Travel Agency Trip Duration"
            android:inputType="date"
            android:ems="10"/>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/editTextINSTI5"
            android:hint="Insert Travel Agency Trip Type"
            android:inputType="textAutoCorrect"
            android:ems="10"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Submit"
            android:id="@+id/submituser1"/>

    </LinearLayout>

